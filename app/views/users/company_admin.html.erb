<!-- page content -->
<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Company Management Page</h3>
      </div>

      <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                              <button class="btn btn-default" type="button">Go!</button>
                          </span>
          </div>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">

      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel" style="height:600px;overflow:  auto;">
          <div class="x_title">
            <h2>Company <small>Management</small></h2>
            <ul class="nav navbar-right panel_toolbox">
              <li class="dropdown" title="Add New Admin">
                <%if current_user.is_super_admin? %>
                  <%= link_to  new_company_admin_users_path do %>
                    <i class="fa fa-plus"></i>
                  <%end%>
                <%end%>
              </li>
              <li><a class="close-link"><i class="fa fa-close"></i></a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <p class="text-muted font-13 m-b-30">
              User Details
            </p>
            <table id="datatable" class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Email</th>
                  <th>Company</th>
                  <th>Role</th>
                  <th>Balance</th>
                  <th>Percentage</th>
                  <th>Actions</th>
                </tr>
              </thead>


              <tbody>
                <%@users.each do |user|%>
                  <tr>
                    <td><%= user.first_name%></td>
                    <td><%= user.last_name%></td>
                    <td><%= user.email%></td>
                    <td><%= user.company_name%></td>
                    <td><%= user.role_id%></td>
                    <td class="<%= user.amount < 0 ? "unpaid" : "paid" %>"><%= user.amount.abs%></td>
                    <td><%= user.percentage%></td>
                    <td><%= link_to "View", user_path(user)%>
                      <%if current_user.is_company_admin? || current_user.is_super_admin?%>
                        <%= link_to "Add Member", new_member_users_path(reff_user: user.id)%>
                        <%= link_to "Add Payment", new_transaction_path(user_id: user.id)%>
                        <%if current_user.is_super_admin? %>
                          <%= link_to "view Team", team_users_path(user)%>
                        <%end%>
                      <%end%>
                    </td>
                  </tr>
                <%end%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /page content -->

<!--Test Page specific JS -->
<script> 
  $("#datatable").DataTable();
</script>